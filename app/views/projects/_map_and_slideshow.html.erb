<div class="row">
  <div class="col-md-6 col-sm-6">
    <div class="card image-map-card">
      <iframe
        frameborder="0" style="width: 100%; height: 100%; border: 0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC93bcY6JbfNwW_u0LROOoqSobojAllko8
        &q=<%= google_maps_helper %>&zoom=4">
      </iframe>
    </div>
  </div>

  <div class="col-md-6 col-sm-6">
    <div class="card image-map-card">
      <div id="carouselExampleControls" class="carousel slide" data-interval="false">
        <div class="carousel-inner" role="listbox">
          <% @project.images.each do |image| %>
            <div class="carousel-item <%= active?(image, @project.images.first) %>">
              <%= image_tag(image, class: "d-block img-fluid slide-images") %>
            </div>
          <% end %>
        </div>

        <% if @project.images.count > 1 %>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="fa fa-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="fa fa-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

