<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Freiwilligenarbeit - Projekte</h3>
  <hr><br>


  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-lg-3 col-md-4 col-sm-6" style="margin-bottom: 1rem">
        <div class="card projects-card">
          <div class="card-block">
            <%= link_to project do %>
              <%= image_tag project.images.first,
                  width: '100%', height: 'auto', style: "margin-bottom: 1rem" %>
              <h5><%= project.title %></h5>
              <strong><%= project.preview %></strong>
            <% end %>
            <div>
              <%= link_to 'Show', project %>
              <%= link_to 'Edit', edit_project_path(project) %>
              <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<hr>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Preview</th>
      <th>Summary</th>
      <th>Qualification</th>
      <th>Work</th>
      <th>Accomodation</th>
      <th>Costs</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Webpage</th>
      <th>Min weeks</th>
      <th>Costs week</th>
      <th>Accom standard</th>
      <th>Lat</th>
      <th>Lgt</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 </table>
  
